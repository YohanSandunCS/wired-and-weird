# Hardware Enable/Disable Flags (for testing)
ENABLE_MOTORS=True
ENABLE_CAMERA=True
ENABLE_SENSORS=True
ENABLE_BUZZER=True
ENABLE_WEBSOCKET=False

# Gateway Server Configuration
GATEWAY_HOST=192.168.1.5
GATEWAY_PORT=8000
# GATEWAY_URL is auto-generated from GATEWAY_HOST and GATEWAY_PORT
# Only uncomment if you need a custom URL format
# GATEWAY_URL=ws://192.168.1.5:8000/ws/robot?robotId={robot_id}

# Robot Identification
ROBOT_ID=medirunner_001
ROBOT_NAME=MediRunner Alpha

# GPIO Pin Configuration (BCM numbering)
# L298N Motor Driver Pins
# Left Motor: ENA=GPIO20, IN1=GPIO23 (forward), IN2=GPIO22 (backward)
MOTOR_LEFT_FORWARD=23      # IN1 - Left motor forward direction
MOTOR_LEFT_BACKWARD=22     # IN2 - Left motor backward direction
MOTOR_LEFT_ENABLE=20       # ENA - Left motor PWM speed control

# Right Motor: ENB=GPIO16, IN3=GPIO27 (forward), IN4=GPIO17 (backward)
MOTOR_RIGHT_FORWARD=27     # IN3 - Right motor forward direction
MOTOR_RIGHT_BACKWARD=17    # IN4 - Right motor backward direction
MOTOR_RIGHT_ENABLE=16      # ENB - Right motor PWM speed control

# IR Line Sensor Pins (5 sensors)
IR_SENSOR_LEFT2=5
IR_SENSOR_LEFT1=6
IR_SENSOR_CENTER=13
IR_SENSOR_RIGHT1=19
IR_SENSOR_RIGHT2=26

# Proximity Sensor Pin (must NOT conflict with motor pins 16/20!)
PROXIMITY_SENSOR=24
ENABLE_PROXIMITY=False

# Bump Sensor Pin (must NOT conflict with motor pins 16/20!)
BUMP_SENSOR=25
ENABLE_BUMP=False

# Buzzer Pin
BUZZER_PIN=21

# Camera Configuration
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
CAMERA_QUALITY=85

# Telemetry Configuration
TELEMETRY_INTERVAL=0.5

# Motor Speed (PWM duty cycle 0-100)
DEFAULT_MOTOR_SPEED=70
TURN_MOTOR_SPEED=60

# Line Following Mode: 'pid' (PID controller) or 'if' (simple if-conditions)
LINE_FOLLOW_MODE=if

# Line Following PID Configuration
LINE_FOLLOW_SPEED=45
LINE_FOLLOW_KP=12.0
LINE_FOLLOW_KI=0.1
LINE_FOLLOW_KD=4.0
LINE_LOST_MAX_COUNT=60
LINE_FOLLOW_UPDATE_RATE=0.05

# If-condition mode speed settings (only used when LINE_FOLLOW_MODE=if)
LINE_FOLLOW_IF_SLIGHT_SPEED=35
LINE_FOLLOW_IF_SHARP_SPEED=20

# Invert motor correction if robot turns WRONG WAY when following line
INVERT_MOTOR_CORRECTION=True

# Invert line sensors if sensors return 1 for black line (instead of 0)
INVERT_LINE_SENSORS=False

# Debug Mode
DEBUG=True
